<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetUnderControl.Views.Accounts"
             xmlns:local="clr-namespace:BudgetUnderControl.Views;assembly=BudgetUnderControl"
             Title="Accounts">
    <ContentPage.Content>
        <AbsoluteLayout x:Name="absoluteLayout" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <StackLayout Padding="0,20,0,0" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
            <Label Text="Accounts" HorizontalOptions="Center" FontAttributes="Bold" />
            <ListView x:Name="accounts" ItemSelected="OnItemSelected" ItemsSource="{Binding Accounts}" SelectedItem="{Binding SelectedAccount}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <local:AccountListItem Name="{Binding Name}" Currency="{Binding Currency}" Balance="{Binding  Balance}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>